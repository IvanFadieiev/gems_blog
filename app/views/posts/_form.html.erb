<%= tinymce_assets %>
<%= form_for [@category, @post], html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :title, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :title, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :link, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :link, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :body, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :body, class: 'text_field form-control tinymce', rows: 15 %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label 'Category', class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.select(:category_id, Category.all.collect {|u| [u.name, u.id]},
                   {prompt: 'Select', selected: selected_category},
                   { class: 'text_field form-control' }) %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                  @path, class: 'btn btn-default' %>
    </div>
  </div>

  <%= tinymce %>
<% end %>
